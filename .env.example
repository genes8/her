# ============================================
# HEALTHEQUIROUTE ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# DATABASE
# ============================================
POSTGRES_USER=healthequiroute
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=healthequiroute
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# GOOGLE OAUTH 2.0
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ============================================
# BACKEND
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true
BACKEND_WORKERS=1
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================
# FRONTEND
# ============================================
VITE_API_URL=http://localhost:8000/api/v1
VITE_MAPLIBRE_STYLE_URL=https://demotiles.maplibre.org/style.json

# ============================================
# CELERY
# ============================================
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

# ============================================
# DEX ENGINE DEFAULTS
# ============================================
DEX_CLINICAL_WEIGHT=0.40
DEX_SOCIAL_WEIGHT=0.35
DEX_ACCESSIBILITY_WEIGHT=0.25
DEX_MODEL_VERSION=v1.0

# ============================================
# AI/ML (Post-MVP)
# ============================================
# KIMI_API_KEY=your_kimi_api_key_here
# KIMI_MODEL=kimi-k2-thinking-turbo

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# PGADMIN (Development only)
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@healthequiroute.local
PGADMIN_DEFAULT_PASSWORD=admin_password_here
